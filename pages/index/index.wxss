/**index.wxss**/

.userinfo {
  width: 100%;
  text-align: center;
}

.userinfo .username {
  display: block;
  font-size: 50rpx;
}

.userinfo .userphone {
  display: block;
  font-size: 30rpx;
  color: #9b9b9b;
}

.course-panel {
  background-color: #f2f2f2;
  padding: 20px;
  border-radius: 5px;
  margin-top: 50rpx;
  min-height: 300rpx;
}

.current-course {
  font-size: 40rpx;
}

.info {
  margin-top: 20rpx;
  overflow: hidden;
}

.info-title {
  font-size: 30rpx;
  width: 150rpx;
  padding-left: 20rpx;
  color: #9b9b9b;
  float: left;
}

.info-content {
  font-size: 30rpx;
  float: left;
  width: 280rpx;
}
.no-course{
  font-size: 30rpx;
  padding-left: 20rpx;
  margin-top: 20rpx;
  color: #9b9b9b;
  float: left;
}
.sign-btn {
  margin-top: 50rpx;
}
.sign-btn:disabled{
  
}

.location-btn {
  margin-top: 30rpx;
}

.bind-tip {
  font-size: 30rpx;
  text-align: center;
}

.img-wrapper {
  padding: 50rpx;
  text-align: center;
}

.bind-img {
  width: 342rpx;
  height: 200rpx;
}

.to-bind-btn {
  margin-top: 30rpx;
}
